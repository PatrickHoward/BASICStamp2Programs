'{$STAMP BS2}
'{$PBASIC 2.5}

'Patrick M. Howard, Collin Shaefer
'September 20, 2017

'Declaration of the variables
A VAR BIT
B VAR NIB
C VAR BYTE
D VAR WORD

'Initialization of variables
A = 1
B = 1
C = 1
D = 1

ENDLESS:

	'Display totals
	DEBUG "A is: ", DEC A, "   B is ", DEC B, "   C is ", DEC C, "   D is ", DEC D, CR
	
	'Decrement by 1
	A = A - 1
	B = B - 1
	C = C - 1
	D = D - 1

	'Repeat loop
	PAUSE 1000
	GOTO ENDLESS

END